{
  // ==================== 配置版本 ====================
  // 自动管理，请勿手动修改
  "version": "0.6.4",

  "noveler": {
    // ==================== 章节目标字数 ====================
    // 创建新章节时的默认目标字数
    "targetWords": {
      "default": 2500
    },

    // ==================== 语法高亮配置 ====================
    // 设置对话、人物名称等元素的高亮样式
    "highlight": {
      // 对话高亮样式（引号内的文字）
      "dialogue": {
        "color": "#ce9178",
        "backgroundColor": "rgba(206, 145, 120, 0.15)",
        "fontStyle": "normal"
      },
      // 人物名称高亮样式（自动识别 characters/ 目录中的人物）
      "character": {
        "color": "#4ec9b0",
        "backgroundColor": "rgba(78, 201, 176, 0.15)",
        "fontWeight": "bold"
      }
    },

    // ==================== 格式化配置 ====================
    // 控制标点符号和格式化行为
    "format": {
      // 是否自动转换引号为中文引号
      "convertQuotes": true,
      // 保存时是否自动格式化
      "autoFormat": true,
      // 中文引号样式：""（直角引号）或 ""（弯引号）
      "chineseQuoteStyle": "\"\""
    },

    // ==================== 字数统计配置 ====================
    // 控制字数统计的显示和计算方式
    "wordCount": {
      // 是否在状态栏显示字数
      "showInStatusBar": true,
      // 字数统计是否包含标点符号
      "includePunctuation": true
    },

    // ==================== README 自动更新 ====================
    // 创建章节/人物时自动更新 README 的行为
    // 可选值：'always'（总是自动添加）、'ask'（询问用户）、'never'（从不添加）
    "autoUpdateReadmeOnCreate": {
      "value": "always"
    },

    // ==================== 自动空行 ====================
    // 是否在段落之间自动添加空行
    "autoEmptyLine": {
      "value": true
    },

    // ==================== 段落缩进 ====================
    // 是否在段落首行自动添加两个全角空格缩进
    // 符合中文排版习惯，让文章更美观
    "paragraphIndent": {
      "value": true  // 默认开启
    },

    // ==================== 敏感词检测 ====================
    // 自动检测小说中的敏感词汇，帮助规避审核风险
    "sensitiveWords": {
      // 总开关
      "enabled": true,

      // 内置词库配置（插件自带的 900 词敏感词库）
      "builtInLibrary": {
        "enabled": true,  // 是否使用内置词库
        "levels": {
          "high": true,    // ✅ 高危级别（默认开启）：政治、严重暴力、严重违法等红线词汇，强烈建议启用
          "medium": true,  // ✅ 中危级别（默认开启）：色情、毒品、赌博、宗教敏感等风险词汇
          "low": false     // ❌ 低危级别（默认关闭）：脏话、广告、歧视性语言等质量词汇，可选启用
        }
      },

      // 自定义敏感词库配置（完全由您自己维护的敏感词列表）
      "customLibrary": {
        "enabled": true,  // ��� 默认开启
        "path": ".noveler/sensitive-words/custom-words.jsonc"
      },

      // 白名单配置（排除误报的词汇）
      "whitelist": {
        "enabled": true,  // ✅ 默认开启
        "path": ".noveler/sensitive-words/whitelist.jsonc"  // 排除误报的词汇（如人物名、地名）
      },

      // 检测时机
      "checkOnType": true,   // 输入时实时检测（防抖 500ms，不影响性能）
      "checkOnSave": true,   // 保存文件时检测

      // 显示设置
      "display": {
        "severity": "Warning",       // 问题严重度："Error"（错误）| "Warning"（警告）| "Information"（提示）
        "showInProblems": true,      // 是否在问题面板（Problems）中显示
        "showWordCount": true        // 是否在状态栏显示敏感词数量
      }
    },

    // ==================== 分卷功能 ====================
    // 将章节组织为卷的高级功能，适合长篇小说创作
    "volumes": {
      // 是否启用分卷功能
      "enabled": true,

      // 文件夹结构类型
      // - "flat": 扁平结构，所有章节在 chapters/ 目录下（无分卷）
      // - "nested": 嵌套结构，chapters/ 下包含卷文件夹，每个卷文件夹内包含章节
      //   例如：chapters/第一卷-崛起/第001章-开局.md
      "folderStructure": "flat",

      // 卷编号格式
      // - "arabic": 阿拉伯数字（1, 2, 3...）
      // - "chinese": 中文数字（一、二、三...）
      // - "roman": 罗马数字（I, II, III...）
      "numberFormat": "arabic",

      // 章节编号模式
      // - "global": 全局连续编号（第1章、第2章...，跨越所有卷）
      // - "volume": 按卷重置编号（每卷都从第1章开始）
      // - "mixed": 混合模式（卷内连续，但在章节号前显示卷号，如1-1, 1-2, 2-1...）
      "chapterNumbering": "global"
    },

    // ==================== 全局人物列表 ====================
    // 已弃用：推荐使用 characters/ 目录管理人物
    // 此配置项将在未来版本移除
    "characters": {
      "list": []
    }
  }
}
