{
  "name": "chinese-novel-writer",
  "displayName": "Noveler - 中文小说写作助手",
  "description": "专为中文小说写作设计的 VS Code 插件，提供语法高亮、格式化、字数统计等功能",
  "version": "0.3.0",
  "publisher": "chang",
  "author": "Noveler Contributors",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChangFang911/vscode-plugin-noveler.git"
  },
  "bugs": {
    "url": "https://github.com/ChangFang911/vscode-plugin-noveler/issues"
  },
  "homepage": "https://github.com/ChangFang911/vscode-plugin-noveler#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "chinese",
    "novel",
    "writing",
    "markdown",
    "中文",
    "小说",
    "写作",
    "文学"
  ],
  "galleryBanner": {
    "color": "#2C3E50",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "noveler.initProject",
        "title": "Noveler: 初始化小说项目"
      },
      {
        "command": "noveler.formatDocument",
        "title": "Noveler: 格式化文档"
      },
      {
        "command": "noveler.showWordCount",
        "title": "Noveler: 显示字数统计"
      },
      {
        "command": "noveler.createChapter",
        "title": "Noveler: 创建新章节"
      },
      {
        "command": "noveler.createCharacter",
        "title": "Noveler: 创建人物"
      },
      {
        "command": "noveler.updateReadme",
        "title": "Noveler: 更新 README 统计"
      },
      {
        "command": "noveler.toggleFocusMode",
        "title": "Noveler: 切换专注模式"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "noveler",
          "title": "Noveler 小说助手",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "noveler": [
        {
          "id": "novelerView",
          "name": "小说项目"
        }
      ]
    },
    "configuration": {
      "title": "Noveler",
      "properties": {
        "noveler.autoFormat": {
          "type": "boolean",
          "default": true,
          "description": "保存时自动格式化文档"
        },
        "noveler.showWordCountInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "在状态栏显示字数统计"
        },
        "noveler.chineseQuoteStyle": {
          "type": "string",
          "enum": [
            "「」",
            "\"\""
          ],
          "default": "「」",
          "description": "中文引号样式"
        },
        "noveler.autoEmptyLine": {
          "type": "boolean",
          "default": true,
          "description": "在 chapters 目录下的 Markdown 文件中，按回车时自动插入空行（仅在小说项目中生效）"
        },
        "noveler.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "启用自动保存（推荐开启，避免意外丢失内容）"
        },
        "noveler.autoUpdateReadmeOnCreate": {
          "type": "string",
          "enum": [
            "always",
            "ask",
            "never"
          ],
          "default": "ask",
          "description": "创建章节或人物后自动更新 README：always（总是自动更新）、ask（询问是否更新）、never（从不自动更新）",
          "enumDescriptions": [
            "总是自动更新 README",
            "每次询问是否更新 README",
            "从不自动更新 README"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3"
  }
}
