{
  "name": "chinese-novel-writer",
  "displayName": "Noveler - 中文小说写作助手",
  "description": "专为中文小说写作设计的 VS Code 插件，提供语法高亮、格式化、字数统计等功能",
  "version": "0.7.1",
  "publisher": "chang",
  "author": "Noveler Contributors",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChangFang911/vscode-plugin-noveler.git"
  },
  "bugs": {
    "url": "https://github.com/ChangFang911/vscode-plugin-noveler/issues"
  },
  "homepage": "https://github.com/ChangFang911/vscode-plugin-noveler#readme",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "chinese",
    "novel",
    "writing",
    "markdown",
    "中文",
    "小说",
    "写作",
    "文学"
  ],
  "galleryBanner": {
    "color": "#2C3E50",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "noveler.initProject",
        "title": "Noveler: 初始化小说项目"
      },
      {
        "command": "noveler.formatDocument",
        "title": "Noveler: 格式化文档"
      },
      {
        "command": "noveler.showStats",
        "title": "Noveler: 显示统计仪表板"
      },
      {
        "command": "noveler.showWelcome",
        "title": "Noveler: 显示欢迎页面"
      },
      {
        "command": "noveler.createChapter",
        "title": "创建章节",
        "icon": "$(add)"
      },
      {
        "command": "noveler.createCharacter",
        "title": "创建人物",
        "icon": "$(add)"
      },
      {
        "command": "noveler.refresh",
        "title": "Noveler: 刷新"
      },
      {
        "command": "noveler.toggleFocusMode",
        "title": "Noveler: 切换专注模式"
      },
      {
        "command": "noveler.openConfig",
        "title": "Noveler: 打开配置文件"
      },
      {
        "command": "noveler.openSensitiveWordsConfig",
        "title": "Noveler: 打开敏感词配置",
        "icon": "$(warning)"
      },
      {
        "command": "noveler.renameChapter",
        "title": "重命名章节"
      },
      {
        "command": "noveler.updateChapterStatus",
        "title": "设置章节状态"
      },
      {
        "command": "noveler.deleteChapter",
        "title": "删除章节"
      },
      {
        "command": "noveler.renameCharacter",
        "title": "重命名人物"
      },
      {
        "command": "noveler.deleteCharacter",
        "title": "删除人物"
      },
      {
        "command": "noveler.jumpToReadmeSection",
        "title": "Noveler: 跳转到 README 指定位置"
      },
      {
        "command": "noveler.reloadSensitiveWords",
        "title": "Noveler: 重新加载敏感词库"
      },
      {
        "command": "noveler.addToCustomWords",
        "title": "Noveler: 添加到自定义敏感词库"
      },
      {
        "command": "noveler.addSelectedToWhitelist",
        "title": "Noveler: 添加到白名单"
      },
      {
        "command": "noveler.createVolume",
        "title": "创建卷",
        "icon": "$(add)"
      },
      {
        "command": "noveler.renameVolume",
        "title": "重命名卷"
      },
      {
        "command": "noveler.deleteVolume",
        "title": "删除卷"
      },
      {
        "command": "noveler.editVolumeProperties",
        "title": "编辑卷属性"
      },
      {
        "command": "noveler.createChapterInVolume",
        "title": "创建章节",
        "icon": "$(add)"
      },
      {
        "command": "noveler.moveChapterToVolume",
        "title": "移动到其他卷"
      },
      {
        "command": "noveler.copyChapterToVolume",
        "title": "复制到其他卷"
      },
      {
        "command": "noveler.migrateToVolumeStructure",
        "title": "Noveler: 迁移到分卷结构"
      },
      {
        "command": "noveler.rollbackToFlatStructure",
        "title": "Noveler: 回滚到扁平结构"
      },
      {
        "command": "noveler.openVolumeOutline",
        "title": "编辑卷大纲"
      },
      {
        "command": "noveler.generateRandomName",
        "title": "Noveler: 随机起名",
        "icon": "$(symbol-misc)"
      },
      {
        "command": "noveler.quickSettings",
        "title": "Noveler: 快速设置",
        "icon": "$(gear)"
      },
      {
        "command": "noveler.toggleEyeCareMode",
        "title": "Noveler: 切换护眼模式",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "noveler.formatDocument",
          "when": "editorLangId == markdown",
          "group": "noveler@1"
        },
        {
          "command": "noveler.toggleFocusMode",
          "when": "editorLangId == markdown",
          "group": "noveler@2"
        },
        {
          "command": "noveler.addToCustomWords",
          "when": "editorLangId == markdown && editorHasSelection",
          "group": "noveler@3"
        },
        {
          "command": "noveler.addSelectedToWhitelist",
          "when": "editorLangId == markdown && editorHasSelection",
          "group": "noveler@4"
        }
      ],
      "view/item/context": [
        {
          "command": "noveler.createChapter",
          "when": "view == novelerView && viewItem == chapterGroup",
          "group": "inline"
        },
        {
          "command": "noveler.createVolume",
          "when": "view == novelerView && viewItem == chapterGroupWithVolumes",
          "group": "inline"
        },
        {
          "command": "noveler.createCharacter",
          "when": "view == novelerView && viewItem == characterGroup",
          "group": "inline"
        },
        {
          "command": "noveler.generateRandomName",
          "when": "view == novelerView && viewItem == characterGroup",
          "group": "inline"
        },
        {
          "command": "noveler.renameChapter",
          "when": "view == novelerView && viewItem == chapter",
          "group": "1_modification@1"
        },
        {
          "command": "noveler.updateChapterStatus",
          "when": "view == novelerView && viewItem == chapter",
          "group": "2_status@1"
        },
        {
          "command": "noveler.deleteChapter",
          "when": "view == novelerView && viewItem == chapter",
          "group": "3_delete@1"
        },
        {
          "command": "noveler.renameCharacter",
          "when": "view == novelerView && viewItem == character",
          "group": "1_modification@1"
        },
        {
          "command": "noveler.deleteCharacter",
          "when": "view == novelerView && viewItem == character",
          "group": "3_delete@1"
        },
        {
          "command": "noveler.createChapterInVolume",
          "when": "view == novelerView && viewItem == volume",
          "group": "inline"
        },
        {
          "command": "noveler.renameVolume",
          "when": "view == novelerView && viewItem == volume",
          "group": "1_modification@1"
        },
        {
          "command": "noveler.editVolumeProperties",
          "when": "view == novelerView && viewItem == volume",
          "group": "2_status@1"
        },
        {
          "command": "noveler.openVolumeOutline",
          "when": "view == novelerView && viewItem == volume",
          "group": "2_status@2"
        },
        {
          "command": "noveler.deleteVolume",
          "when": "view == novelerView && viewItem == volume",
          "group": "3_delete@1"
        },
        {
          "command": "noveler.moveChapterToVolume",
          "when": "view == novelerView && viewItem == chapter",
          "group": "4_move@1"
        },
        {
          "command": "noveler.copyChapterToVolume",
          "when": "view == novelerView && viewItem == chapter",
          "group": "4_move@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "noveler",
          "title": "Noveler 小说助手",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "noveler": [
        {
          "id": "novelerView",
          "name": "小说项目"
        }
      ]
    },
    "themes": [
      {
        "label": "Noveler 护眼模式",
        "uiTheme": "vs-dark",
        "path": "./themes/noveler-eye-care.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "node esbuild.js --production",
    "compile-watch": "node esbuild.js --watch",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "test:coverage": "c8 --reporter=text --reporter=lcov --reporter=html npm test",
    "coverage:report": "c8 report --reporter=text-summary",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^10.1.3",
    "esbuild": "^0.27.1",
    "eslint": "^8.0.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1",
    "yaml": "^2.8.2"
  }
}
